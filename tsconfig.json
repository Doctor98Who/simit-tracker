{
  "compilerOptions": {
    "target": "ES2018",  // Good mobile support, allows modern features
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "downlevelIteration": true,  // Important for mobile compatibility
    "allowJs": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ]
}